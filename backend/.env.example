# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/myclinic

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# SMS Provider Configuration
# Options: 'console' (for development) or 'dialog' (for production)
SMS_PROVIDER=console

# Dialog eSMS Configuration (Only needed if SMS_PROVIDER=dialog)
DIALOG_SMS_API_URL=https://https-api.dialog.lk/sms/send
DIALOG_AUTH_URL=https://https-api.dialog.lk/token
DIALOG_CLIENT_ID=your_dialog_client_id
DIALOG_CLIENT_SECRET=your_dialog_client_secret
DIALOG_SENDER_ID=MyClinic
